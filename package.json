{
    "name": "Fluxly",
    "version": "0.0.0",
    "description": "Fluxly Monorepo",
    "homepage": "https://localhost:3000",
    "license": "Apache-2.0",
    "private": true,
    "type": "module",
    "author": {
        "name": "Connor Love",
        "email": "loveconnor2005@gmail.com"
    },
    "workspaces": [
        "packages/*",
        "apps/*",
        "tooling/*",
        "apps/web/*",
        "docs"
    ],
    "scripts": {
        "build": "bun --filter @fluxly/web build:client",
        "start": "bun --filter @fluxly/web start:client",
        "dev": "bun --filter @fluxly/web dev",
        "test": "bun --filter '*' test",
        "docs": "bun --filter @fluxly/docs dev",
        "dev:admin": "bun --filter @fluxly/admin dev",
        "backend:start": "bun --filter @fluxly/backend start",
        "db:gen": "bun --filter @fluxly/db db:gen",
        "db:push": "cd packages/db && bun db:push",
        "db:seed": "cd packages/db && bun db:seed",
        "db:migrate": "cd packages/db && bun db:migrate",
        "db:reset": "cd apps/backend && bun run reset",
        "format": "bun --filter '*' format",
        "lint": "bun --filter '*' lint",
        "typecheck": "bun --filter @fluxly/web-client typecheck",
        "clean": "git clean -xdf node_modules",
        "clean:workspaces": "bun --filter '*' clean",
        "setup:env": "cd packages/scripts && bun run start",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:restart": "docker compose down && docker compose up -d --build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fluxly-dev/fluxly.git"
    },
    "bugs": {
        "url": "https://github.com/fluxly-dev/fluxly/issues"
    },
    "devDependencies": {
        "@fluxly/eslint": "*"
    },
    "packageManager": "bun@1.3.1",
    "dependencies": {
        "@base-ui-components/react": "^1.0.0-beta.6"
    }
}